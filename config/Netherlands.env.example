# ============================================================================
# Netherlands Farmacotherapeutisch Kompas Scraper - Configuration Template
# ============================================================================
# INSTRUCTIONS:
# 1. Copy this file to Netherlands.env.json in the same directory
# 2. Replace placeholder values with your actual values
# 3. NEVER commit the actual .env.json file with real secrets to git!
# ============================================================================

# ============================================================================
# PATH CONFIGURATION
# ============================================================================
# Base directory (leave empty to use platform root: Documents/ScraperPlatform/)
BASE_DIR=

# Input directory (relative to BASE_DIR or absolute path)
INPUT_DIR=input

# Output directory (relative to BASE_DIR or absolute path)
OUTPUT_DIR=output

# Backup directory (relative to BASE_DIR or absolute path)
BACKUP_DIR=backups

# ============================================================================
# FILE NAMES
# ============================================================================
SEARCH_TERMS_CSV_NAME=search_terms.csv
COLLECTED_URLS_CSV_NAME=collected_urls.csv
PACKS_CSV_NAME=packs.csv
DETAILS_CSV_NAME=details.csv
COSTS_CSV_NAME=costs.csv
COMPLETED_PREFIXES_CSV_NAME=completed_prefixes.csv

# ============================================================================
# SCRAPING CONFIGURATION
# ============================================================================
# Headless mode (true/false)
HEADLESS_COLLECT=false
HEADLESS_SCRAPE=false

# Browser configuration
PAGELOAD_TIMEOUT=90
DOM_READY_TIMEOUT=30

# Scroll configuration
MIN_SCROLL_LOOPS=8000
MAX_SCROLL_LOOPS=15000
MAX_STUCK_ROUNDS=500
SCROLL_WAIT_MS=20

# Threading
SCRAPE_THREADS=4
WORKERS=3

# VAT and Currency
VAT_RATE=0.09
CURRENCY=EUR

# ============================================================================
# STATIC VALUES
# ============================================================================
STATIC_CURRENCY=EUR
STATIC_REGION=EUROPE
