# ============================================================================
# Netherlands Farmacotherapeutisch Kompas Scraper - Configuration Template
# ============================================================================
# INSTRUCTIONS:
# 1. Copy this file to Netherlands.env.json in the same directory
# 2. Replace placeholder values with your actual values
# 3. NEVER commit the actual .env.json file with real secrets to git!
# ============================================================================

# ============================================================================
# PATH CONFIGURATION
# ============================================================================
# Base directory (leave empty to use platform root: Documents/ScraperPlatform/)
BASE_DIR=

# Input directory (relative to BASE_DIR or absolute path)
INPUT_DIR=input

# Output directory (relative to BASE_DIR or absolute path)
OUTPUT_DIR=output

# Backup directory (relative to BASE_DIR or absolute path)
BACKUP_DIR=backups

# ============================================================================
# FILE NAMES
# ============================================================================
SEARCH_TERMS_CSV_NAME=search_terms.csv
COLLECTED_URLS_CSV_NAME=collected_urls.csv
PACKS_CSV_NAME=packs.csv
DETAILS_CSV_NAME=details.csv
COSTS_CSV_NAME=costs.csv
COMPLETED_PREFIXES_CSV_NAME=completed_prefixes.csv

# ============================================================================
# SCRAPING CONFIGURATION
# ============================================================================
# Headless mode (true/false)
HEADLESS_COLLECT=false
HEADLESS_SCRAPE=false

# Browser configuration
PAGELOAD_TIMEOUT=90
DOM_READY_TIMEOUT=30

# Scroll configuration
MIN_SCROLL_LOOPS=8000
MAX_SCROLL_LOOPS=15000
MAX_STUCK_ROUNDS=500
SCROLL_WAIT_MS=20

# Threading
SCRAPE_THREADS=4
WORKERS=3

# Pipeline runner behavior
NL_ENABLE_STEP2=true
NL_ENABLE_STEP3=true
NL_SKIP_REIMBURSEMENT_EXTRACTION=false
NL_PROMETHEUS_PORT=9090
NL_STEP_PAUSE_SECONDS=10

# VAT and Currency
VAT_RATE=0.09
CURRENCY=EUR

# ============================================================================
# STATIC VALUES
# ============================================================================
STATIC_CURRENCY=EUR
STATIC_REGION=EUROPE

# ============================================================================
# TOR PROXY (OPTIONAL — for anonymous scraping)
# ============================================================================
# Enable Tor SOCKS5 proxy for all HTTP requests
TOR_ENABLED=0

# SOCKS5 proxy (Tor daemon)
TOR_SOCKS_HOST=127.0.0.1
TOR_SOCKS_PORT=9050

# Control port (for NEWNYM identity rotation)
TOR_CONTROL_HOST=127.0.0.1
TOR_CONTROL_PORT=9051
TOR_CONTROL_PASSWORD=
TOR_CONTROL_COOKIE_FILE=C:\\TorProxy\\data\\control_auth_cookie

# NEWNYM rotation (get new exit IP periodically)
TOR_NEWNYM_ENABLED=0
TOR_NEWNYM_INTERVAL_SECONDS=720
TOR_NEWNYM_COOLDOWN_SECONDS=10

# Auto-start Tor daemon if not running
AUTO_START_TOR_PROXY=0

# Fail if Tor not available (set to 1 for strict mode)
REQUIRE_TOR_PROXY=0

# Rate limiting (requests per minute)
MAX_REQ_PER_MIN=200
