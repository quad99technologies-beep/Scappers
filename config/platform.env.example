# ============================================================================
# Platform Configuration Template
# ============================================================================
# This is the MASTER configuration file for the Scraper Platform.
# Copy this file to: %USERPROFILE%/Documents/ScraperPlatform/config/platform.env
#
# CRITICAL:
# - This file must ONLY exist in: Documents/ScraperPlatform/config/
# - NEVER copy .env files to output/, backups/, runs/, or sessions/
# - Scraper-specific overrides go in: Documents/ScraperPlatform/config/<ScraperName>.env
#
# Load Order (deterministic):
#   1. Documents/ScraperPlatform/config/platform.env (MUST exist)
#   2. Documents/ScraperPlatform/config/<ScraperName>.env (optional overrides)
# ============================================================================

# Platform Settings
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
MAX_CONCURRENT_RUNS=1

# Database Configuration (optional - set DB_ENABLED=true to use)
# ----------------------------------------------------------------------------
DB_ENABLED=false
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scraper_db
DB_USER=postgres
DB_PASSWORD=

# Rate Limiting & Performance
# ----------------------------------------------------------------------------
DEFAULT_THREADS=2
MIN_THREADS=1
MAX_THREADS=4

# ============================================================================
# Scraper-Specific Defaults (can be overridden in scraper .env files)
# ============================================================================

# --- Canada Quebec Defaults ---
# OpenAI API (required for extraction)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# File names
DEFAULT_INPUT_PDF_NAME=liste-med.pdf
ANNEXE_IV1_PDF_NAME=annexe_iv1.pdf
ANNEXE_IV2_PDF_NAME=annexe_iv2.pdf
ANNEXE_V_PDF_NAME=annexe_v.pdf
FINAL_REPORT_NAME_PREFIX=canadaquebecreport_
FINAL_REPORT_DATE_FORMAT=%d%m%Y

# Extraction tuning
X_TOL=1.0
Y_TOL=1.6
ANNEXE_V_START_PAGE_1IDX=1
ANNEXE_V_MAX_ROWS=

# Validation thresholds
MIN_PAGES_WITH_DIN=10
MIN_HEADERS_RATIO=0.40
MIN_ROW_SHAPE_RATIO=0.55
MAX_FLAGGED_RATIO=0.35

# Static values
STATIC_CURRENCY=CAD
STATIC_REGION=NORTH AMERICA

# --- Malaysia Defaults ---
# (Add Malaysia-specific defaults here if needed)
SCRIPT_01_URL=https://myprime.moh.gov.my/
SCRIPT_02_HEADLESS=true

# --- Argentina Defaults ---
# AlfaBeta credentials (REQUIRED for Argentina)
ALFABETA_USER=
ALFABETA_PASS=

# Scraping configuration
HEADLESS=false
MAX_ROWS=100

# Proxy configuration (optional)
PROXY_1=
PROXY_2=
PROXY_3=

# ScrapingDog API (optional)
SCRAPINGDOG_API_KEY=

# Account rotation
ACCOUNT_ROTATION_SEARCH_LIMIT=100

# Rate limiting
RATE_LIMIT_PRODUCTS=1
RATE_LIMIT_SECONDS=10.0
DUPLICATE_RATE_LIMIT_SECONDS=60.0

# File names
DICTIONARY_FILE=Dictionary.csv
PCID_MAPPING_FILE=pcid_Mapping.csv
PRODUCTLIST_FILE=Productlist.csv
OUTPUT_REPORT_PREFIX=alfabeta_Report_

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
