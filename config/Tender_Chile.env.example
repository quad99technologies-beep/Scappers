# ============================================================================
# Tender Chile Scraper - Configuration Template
# ============================================================================
# INSTRUCTIONS:
# 1. Copy this file to Tender_Chile.env.json in the same directory
# 2. Replace placeholder values with your actual values
# 3. NEVER commit the actual .env.json file with real secrets to git!
# ============================================================================

# ============================================================================
# PATH CONFIGURATION
# ============================================================================
# Base directory (leave empty to use platform root)
BASE_DIR=

# Input directory (relative to BASE_DIR or absolute path)
INPUT_DIR=input

# Output directory (relative to BASE_DIR or absolute path)
OUTPUT_DIR=output

# Backup directory (relative to BASE_DIR or absolute path)
BACKUP_DIR=backups

# ============================================================================
# SCRAPER CONFIGURATION
# ============================================================================
HEADLESS=true
WAIT_SECONDS=60
MAX_TENDERS=100
DISABLE_IMAGES=true
DISABLE_CSS=true

# Input tender list (provided by user)
SCRIPT_01_INPUT_CSV=TenderList.csv

# Step outputs
SCRIPT_01_OUTPUT_CSV=tender_list.csv
SCRIPT_02_OUTPUT_CSV=tender_redirect_urls.csv
SCRIPT_02_RESOLVE_REDIRECTS=false
SCRIPT_03_OUTPUT_CSV=tender_details.csv
SCRIPT_03_PAGE_LOAD_TIMEOUT=120
SCRIPT_03_NAV_RETRIES=3
SCRIPT_03_NAV_RETRY_SLEEP=5
SCRIPT_03_WAIT_AFTER_GET=6
SCRIPT_03_SLEEP_BETWEEN_TENDERS=3
SCRIPT_04_SUPPLIER_OUTPUT_CSV=mercadopublico_supplier_rows.csv
SCRIPT_04_LOT_OUTPUT_CSV=mercadopublico_lot_summary.csv
SCRIPT_05_FINAL_OUTPUT_CSV=final_tender_data.csv

# Backup/clean behavior
SCRIPT_00_KEEP_FILES=[]
SCRIPT_00_KEEP_DIRS=["runs","backups"]

# ============================================================================
# PIPELINE
# ============================================================================
PIPELINE_LOG_FILE_PREFIX=Tender_Chile_run_
