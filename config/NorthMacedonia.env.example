# ============================================================================
# North Macedonia Drug Register Scraper - Configuration Template
# ============================================================================
# INSTRUCTIONS:
# 1. Copy this file to NorthMacedonia.env.json in the same directory
# 2. Replace placeholder values with your actual values
# 3. NEVER commit the actual .env.json file with real secrets to git!
# ============================================================================

# ============================================================================
# PATH CONFIGURATION
# ============================================================================
# Base directory (leave empty to use platform root: Documents/ScraperPlatform/)
BASE_DIR=

# Input directory (relative to BASE_DIR or absolute path)
INPUT_DIR=input

# Output directory (relative to BASE_DIR or absolute path)
OUTPUT_DIR=output

# Backup directory (relative to BASE_DIR or absolute path)
BACKUP_DIR=backups

# ============================================================================
# SCRAPER CONFIGURATION
# ============================================================================
SCRIPT_01_OUTPUT_CSV=north_macedonia_drug_register.csv
SCRIPT_01_CHECKPOINT_JSON=mk_checkpoint.json
SCRIPT_01_HEADLESS=true
SCRIPT_01_SLEEP_BETWEEN_DETAILS=0.05
SCRIPT_01_ROWS_PER_PAGE=200
SCRIPT_01_DETAIL_WORKERS=3
SCRIPT_01_DISABLE_IMAGES=true
SCRIPT_01_DISABLE_CSS=true

# Backup/clean behavior
SCRIPT_00_KEEP_FILES=[]
SCRIPT_00_KEEP_DIRS=["runs","backups"]

# ============================================================================
# PIPELINE
# ============================================================================
PIPELINE_LOG_FILE_PREFIX=NorthMacedonia_run_
