# India NPPA Pharma Sahi Daam Scraper Configuration
# Copy this file to India.env and configure as needed

# Scraper identification
SCRAPER_ID=India

# Browser settings
HEADLESS=false
WAIT_SECONDS=60

# Input file settings
INPUT_FILENAME=formulations.csv

# Output file settings
OUTPUT_FILENAME=medicine_details.csv
EXCEL_EXPORT=true

# Processing limits (0 = no limit)
MAX_FORMULATIONS=0
MAX_MEDICINES_PER_FORMULATION=50

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=5

# Throttling (avoid hammering NPPA and crashing the platform)
# Download delay between requests in seconds (default: 1.0; increase if 429/errors)
INDIA_DOWNLOAD_DELAY=1.0
# Concurrent requests per worker (default: 2; lower = gentler on server)
INDIA_CONCURRENT_REQUESTS=2
# Formulations claimed per batch (default: 1 = claim next only after current completed)
CLAIM_BATCH_SIZE=1
# Parallel Scrapy workers (default: 1; use 2-3 max to avoid overloading)
INDIA_WORKERS=2
# Auto-throttle based on server latency (default: true; set false to use fixed delay only)
INDIA_AUTOTHROTTLE=true

# Selenium dropdown interaction (Step 2)
# When enabled, uses browser automation to interact with search dropdown:
# 1. Go to website
# 2. Enter formulation name
# 3. Wait for dropdown
# 4. Scroll down in dropdown
# 5. Click on exact match
# 6. Extract formulation ID from API link
# Set to true to use Selenium instead of API map matching (default: false)
INDIA_USE_SELENIUM_DROPDOWN=false
# Run Selenium in headless mode (default: true)
INDIA_SELENIUM_HEADLESS=true
# Timeout for Selenium dropdown operations in seconds (default: 30)
INDIA_SELENIUM_DROPDOWN_TIMEOUT=30
