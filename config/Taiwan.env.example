# ============================================================================
# SCRIPT OPTIONS
# ============================================================================
# Output directory (leave blank for default platform path)
OUTPUT_DIR=

# ============================================================================
# STEP 01 OPTIONS - Collect Drug Code URLs
# ============================================================================
# Output CSV for drug code URLs
SCRIPT_01_OUT_CODES=taiwan_drug_code_urls.csv

# Progress tracking files
SCRIPT_01_SEEN_CODES=seen_drug_codes.txt
SCRIPT_01_PROGRESS_FILE=taiwan_progress_prefix.txt

# Headless mode
SCRIPT_01_HEADLESS=1

# ============================================================================
# STEP 02 OPTIONS - Extract Drug Code Details
# ============================================================================
# Input CSV (from Step 01)
SCRIPT_02_IN_CODES=taiwan_drug_code_urls.csv

# Output CSV for drug code details
SCRIPT_02_OUT_DETAILS=taiwan_drug_code_details.csv

# Progress tracking files
SCRIPT_02_SEEN_LICIDS=seen_licids.txt
SCRIPT_02_SEEN_COMPANIES=seen_companies.txt

# Headless mode
SCRIPT_02_HEADLESS=1
