# ============================================
# Russia Farmcom VED Registry Scraper - Configuration Template
# ============================================
# INSTRUCTIONS:
# 1. Copy this file to the appropriate location:
#    - RECOMMENDED: %USERPROFILE%\Documents\ScraperPlatform\config\Russia.env.json
#    - LEGACY: Same directory as this file and rename to .env
# 2. Replace placeholder values with your actual values
# 3. NEVER commit the actual .env file with real secrets to git!
# ============================================

# ============================================
# Script 01: VED Registry Scraper
# ============================================
SCRIPT_01_BASE_URL=http://farmcom.info/site/reestr
SCRIPT_01_REGION_VALUE=50
SCRIPT_01_OUTPUT_CSV=russia_farmcom_ved_moscow_region.csv
SCRIPT_01_HEADLESS=true
SCRIPT_01_PAGE_LOAD_TIMEOUT=60
SCRIPT_01_WAIT_TIMEOUT=30
SCRIPT_01_CLICK_RETRY=3
SCRIPT_01_SLEEP_BETWEEN_PAGES=0.3
SCRIPT_01_FETCH_EAN=false
SCRIPT_01_EAN_POPUP_TIMEOUT=3
# Number of tabs to open for parallel page load (1=sequential, 5=5 tabs for faster scraping)
SCRIPT_01_MULTI_TAB_BATCH=5
# Retry barcode click + extract up to this many times to get 100 EANs per page
SCRIPT_01_EAN_CLICK_RETRIES=5
SCRIPT_01_CHROME_START_MAXIMIZED=--start-maximized
SCRIPT_01_CHROME_DISABLE_AUTOMATION=--disable-blink-features=AutomationControlled
SCRIPT_01_CHROME_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
SCRIPT_01_NAV_RETRIES=3
SCRIPT_01_NAV_RETRY_SLEEP=5.0
SCRIPT_01_NAV_RESTART_DRIVER=true
# Safety limits to prevent infinite loops (defensive programming)
SCRIPT_01_MAX_EMPTY_BATCH_ITERATIONS=10
# Maximum total batch iterations (0=unlimited, use with caution)
SCRIPT_01_MAX_TOTAL_ITERATIONS=0

# ============================================
# Script 02: Excluded List Scraper
# ============================================
SCRIPT_02_BASE_URL=http://farmcom.info/site/reestr?vw=excl
SCRIPT_02_REGION_VALUE=50
SCRIPT_02_OUTPUT_CSV=russia_farmcom_excluded_list.csv
SCRIPT_02_HEADLESS=true
SCRIPT_02_PAGE_LOAD_TIMEOUT=60
SCRIPT_02_WAIT_TIMEOUT=30
SCRIPT_02_SLEEP_BETWEEN_PAGES=0.3
SCRIPT_02_MAX_PAGES=0
# Number of tabs for parallel page load (1=sequential, 5=faster)
SCRIPT_02_MULTI_TAB_BATCH=5
# Rows per page on excluded list (site shows 50; VED list shows 100). Optional, default 50.
# SCRIPT_02_EXCLUDED_ROWS_PER_PAGE=50
# Navigation retry settings
SCRIPT_02_NAV_RETRIES=3
SCRIPT_02_NAV_RETRY_SLEEP=5.0
SCRIPT_02_NAV_RESTART_DRIVER=true

# ============================================
# Script 03: Generate Output Reports
# ============================================
SCRIPT_03_VED_OUTPUT_CSV=russia_ved_report.csv
SCRIPT_03_EXCLUDED_OUTPUT_CSV=russia_excluded_report.csv
SCRIPT_03_VED_FINAL_REPORT=Russia_VED_Report.csv
SCRIPT_03_EXCLUDED_FINAL_REPORT=Russia_Excluded_Report.csv

# ============================================
# Script 00: Backup and Clean
# ============================================
SCRIPT_00_KEEP_FILES=
SCRIPT_00_KEEP_DIRS=runs,backups

# ============================================
# Pipeline Configuration
# ============================================
PIPELINE_LOG_FILE_PREFIX=Russia_run_
