# ============================================================================
# canada_ontario Formulary Scraper - Configuration Template
# ============================================================================
# INSTRUCTIONS:
# 1. Copy this file to CanadaOntario.env.json in the same directory
# 2. Replace placeholder values with your actual values
# 3. NEVER commit the actual .env.json file with real secrets to git!
# ============================================================================

# ============================================================================
# PATH CONFIGURATION
# ============================================================================
# Base directory (leave empty to use platform root: Documents/ScraperPlatform/)
BASE_DIR=

# Input directory (relative to BASE_DIR or absolute path)
INPUT_DIR=input

# Output directory (relative to BASE_DIR or absolute path)
OUTPUT_DIR=output

# Backup directory (relative to BASE_DIR or absolute path)
BACKUP_DIR=backups

# ============================================================================
# FILE NAMES
# ============================================================================
PRODUCTS_CSV_NAME=products.csv
MANUFACTURER_MASTER_CSV_NAME=manufacturer_master.csv

# Final report configuration
FINAL_REPORT_NAME_PREFIX=canadaontarioreport_
FINAL_REPORT_DATE_FORMAT=%d%m%Y

# EAP prices configuration
EAP_PRICES_URL=https://www.ontario.ca/page/exceptional-access-program-product-prices
EAP_PRICES_CSV_NAME=ontario_eap_prices.csv

# ============================================================================
# SCRAPING CONFIGURATION
# ============================================================================
# Sleep between queries (seconds)
SLEEP_BETWEEN_Q=0.35

# Sleep between detail page fetches (seconds)
SLEEP_BETWEEN_DETAIL=0.15

# Retry attempts
RETRIES=4

# Request timeout (seconds)
TIMEOUT=45
REQUEST_TIMEOUT=30

# ============================================================================
# BROWSER / ANTI-BOT (OPTIONAL)
# ============================================================================
# Enable Selenium-based browsing for humanized behavior
USE_BROWSER=false
HEADLESS=true
USE_SEARCH_INPUT=true
ENABLE_STEALTH=true
ENABLE_BROWSER_OBSERVER=true
CAPTURE_BROWSER_ERRORS=false
HUMANIZE_TYPING=true
HUMANIZE_MIN_DELAY=0.05
HUMANIZE_MAX_DELAY=0.16
# Restart the browser every N uses (0 disables)
RESTART_DRIVER_EVERY_N=0

# ============================================================================
# PAGE INTEGRITY CHECKS
# ============================================================================
PAGE_VALIDATION_RETRIES=2
PAGE_MIN_ROWS=1
MAX_BAD_ROW_RATIO=0.2
ALLOW_EMPTY_RESULTS=true

# ============================================================================
# HEALTH CHECK
# ============================================================================
HEALTH_CHECK_REQUIRED=true
HEALTH_RETRIES=2
HEALTH_TIMEOUT=20
QA_CHECKS_ENABLED=true
PROXY_URL=

# ============================================================================
# PROGRESS / LOGGING
# ============================================================================
ENABLE_PROGRESS_BAR=true
LOG_TO_FILE=false
MAX_RETRIES_CLEANUP=5
CLEANUP_RETRY_DELAY_BASE=0.3
LOCK_FORCE=false
LOCK_STALE_SECONDS=21600

# ============================================================================
# EAP SCRAPING
# ============================================================================
EAP_RETRIES=3
EAP_TIMEOUT=60
EAP_REQUEST_JITTER_MIN=0.1
EAP_REQUEST_JITTER_MAX=0.6
EAP_ENABLE_PROGRESS_BAR=true

# ============================================================================
# STATIC VALUES
# ============================================================================
STATIC_CURRENCY=CAD
STATIC_REGION=NORTH AMERICA
